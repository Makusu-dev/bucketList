{% extends 'base.html.twig' %}

{% block title %}Hello WishController!{% endblock %}

{% block main %}

    <h1>Make a wish!</h1>

    <form>
        <label for="wishTitle">Wish title : </label>
        <input type="text" class="form-control" id="wishTitle" name="title" placeholder="What do you wish to do?">

        <label for="wishDescription">Another label</label>
        <input type="text" class="form-control" id="wishDescription" name="description" placeholder="Describe your wish">
        <button type="submit" class="btn btn-primary">Sign in</button>
    </form>

{% endblock %}
